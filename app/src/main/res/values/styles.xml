<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="big_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="very_big_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="most_big_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">38sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="big_edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="small_icon">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="big_icon">
    <item name="android:layout_width">64dp</item>
    <item name="android:layout_height">64dp</item>
    <item name="android:layout_margin">4dp</item>
</style>

    <style name="very_small_icon">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>